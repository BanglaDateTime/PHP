{
    "name": "bangladatetime/php",
    "description": "A PHP library to convert DateTime to Bangla format and Bangla calendar.",
    "type": "library",
    "keywords": [
        "Bangla",
        "DateTime",
        "Bangla Calendar",
        "Bangladesh",
        "Date Conversion"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Md Rasel Islam",
            "email": "rtraselbd@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.3"
    },
    "scripts": {
        "test": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "BanglaDateTime\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BanglaDateTime\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}